<Application x:Class="Hexalyser.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Hexalyser"
             xmlns:vm="clr-namespace:Hexalyser.ViewModels"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Views/Skins/Dark/Skin.xaml" />
                <ResourceDictionary Source="Views/Components/WpfStylableWindow/Styles.xaml" />
                <ResourceDictionary Source="Views/Styles.xaml" />
               <ResourceDictionary>
                    <vm:ViewModelLocator x:Key="Locator"  />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Application.Resources>
</Application>
